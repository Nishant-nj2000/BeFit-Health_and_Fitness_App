<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background_diagonal"
    tools:context=".Home_fragment">


    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_back"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/first_row"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="162dp"
                android:layout_height="165dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginHorizontal="28dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/your_plan_bg" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#C6F33E39">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="84dp"
                        android:layout_height="80dp"
                        android:padding="20dp"
                        android:src="@drawable/workout" />

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/product_sans"
                        android:lineSpacingExtra="-8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Your Plans"
                        android:textColor="#F3FFFFFF"
                        android:textSize="20sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="162dp"
                android:layout_height="165dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/goal_bg" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/back2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#C9115CB5">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="84dp"
                        android:layout_height="80dp"
                        android:padding="20dp"
                        android:src="@drawable/goal" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/product_sans"
                        android:lineSpacingExtra="-8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Your Goals"
                        android:textColor="#F3FFFFFF"
                        android:textSize="20sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_row"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:layout_below="@id/first_row"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="162dp"
                android:layout_height="165dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="28dp"
                android:orientation="horizontal"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/workout_count_bg" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/back3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#C3F27649">

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="84dp"
                        android:layout_height="80dp"
                        android:padding="20dp"
                        android:src="@drawable/workout_icon" />

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/product_sans"
                        android:lineSpacingExtra="-8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Workouts - 0"
                        android:textColor="#F3FFFFFF"
                        android:textSize="20sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="162dp"
                android:layout_height="165dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/card4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/duration" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/back4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#C35A5A5A">

                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="84dp"
                        android:layout_height="80dp"
                        android:padding="20dp"
                        android:src="@drawable/duration_icon" />

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/product_sans"
                        android:lineSpacingExtra="-8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Duration - 0"
                        android:textColor="#F3FFFFFF"
                        android:textSize="20sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_row"
            android:layout_width="match_parent"
            android:layout_height="179dp"
            android:layout_below="@id/second_row"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_marginHorizontal="28dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center_vertical"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/card5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/workouts_bg" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/back6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#C3FD5D23">

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_vertical"
                            android:drawableLeft="@drawable/ic_baseline_goal_fixed_24"
                            android:drawablePadding="10dp"
                            android:drawableTint="#E8FFFFFF"
                            android:fontFamily="@font/product_sans"
                            android:gravity="center"
                            android:text="Set A Goal"
                            android:textColor="#F0FFFFFF"
                            android:textSize="17sp" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/product_sans"
                        android:lineSpacingExtra="-8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Weekly Goal"
                        android:textColor="#F3FFFFFF"
                        android:textSize="20sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>